# AfterLight Application Environment Configuration
# ================================================
# Copy this file to .env and fill in your actual values

# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME=AfterLight
VERSION=1.1.0

# Server
HOST=0.0.0.0
PORT=3000

# Frontend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_APP_NAME=AfterLight
NEXT_PUBLIC_APP_VERSION=1.1.0

# Database - Supabase PostgreSQL
DATABASE_URL=postgresql://postgres.sdtoyudnjagnsqrodljf:your-password@aws-1-us-east-2.pooler.supabase.com:6543/postgres
DATABASE_HOST=aws-1-us-east-2.pooler.supabase.com
DATABASE_PORT=6543
DATABASE_NAME=postgres
DATABASE_USER=postgres.sdtoyudnjagnsqrodljf
DATABASE_PASSWORD=your-password

# Supabase Configuration
SUPABASE_URL=https://sdtoyudnjagnsqrodljf.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Security
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Print Services (Optional)
PRINTFUL_API_KEY=your-printfull-api-key
LOB_API_KEY=your-lob-api-key

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Railway Configuration (for production)
RAILWAY_ENVIRONMENT=development
RAILWAY_PROJECT_ID=your-project-id
RAILWAY_SERVICE_ID=your-service-id

# Development URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8001
