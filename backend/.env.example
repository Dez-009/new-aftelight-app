# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME=AfterLight API
VERSION=1.1.0

# Server
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/afterlight
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=afterlight
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# File upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External services
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Print services
PRINTFUL_API_KEY=your-printfull-api-key
LOB_API_KEY=your-lob-api-key

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://afterlight.app

# Trusted hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,afterlight.app
